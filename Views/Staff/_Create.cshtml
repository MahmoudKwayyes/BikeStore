@model BikeStore.Models.StaffViewModel
<partial name="~/Views/Shared/_ValidationScript.cshtml" />

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">عامل جديد</h5>
                @*<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>*@

            </div>
            <form method="post" enctype="multipart/form-data" asp-controller="Staff" asp-action="Create">

                <div class="modal-body">
                    <div class="row">
                        <div class="row">
                            <div class="col">
                                <label>الإسم</label>
                                <input class="form-control" asp-for="FirstName" maxlength="50" type="text" placeholder="اكتب اسمك هنا" aria-label="Firs Name">
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="FirstName"></span>
                                </div>
                            </div>
                        
                        
                            <div class="col">
                                <label>الكنية</label>
                                <input class="form-control" asp-for="LastName" maxlength="50" type="text" placeholder="اكتب كنيتك هنا" aria-label="Last Name">
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="LastName"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <label>البريد الإلكتروني</label>
                                <div class="input-group mb-3">
                                    <span class="input-group-text" id="basic-addon1">@@</span>
                                    <input class="form-control" asp-for="Email" maxlength="255" type="text" placeholder="Example@gmail.com" aria-label="Email">
                                </div>
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col">
                                <label>الهاتف</label>
                                <input class="form-control" asp-for="Phone" maxlength="25" type="text" placeholder="رقم الهاتف" aria-label="Phone">
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="Phone"></span>
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col">
                                <label>المتجر</label>
                                <div class="dropdown">
                                    <select class="form-select" asp-for="StoreId" asp-items="@(new SelectList(@ViewBag.StoreList,"StoreId","StoreName"))">
                                        <option value="0">--اختر متجراً--</option>
                                    </select>

                                </div>
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="StoreId"></span>
                                </div>
                            </div>
                            <div class="col">
                                <label>المدير</label>
                                <div class="dropdown">
                                    <select class="form-select" asp-for="ManagerId" asp-items="@(new SelectList(@ViewBag.ManagerList,"StaffId","FirstName"))">
                                        <option value="0">--اختر المدير--</option>
                                    </select>

                                </div>
                                <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="ManagerId"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <input class="form-check-input" asp-for="Active" type="checkbox" value="Active" aria-label="Active Staff" />
                                <label>تفعيل العامل</label>
                               @* <div class="validation-Layout">
                                    <span class="text-danger" role="alert" asp-validation-for="Active"></span>
                                </div>*@
                            </div>
                        </div>
                    </div>
                </div>

                <div class="modal-footer" tabindex="1">

                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">الغاء</button>
                    <input name="submit" type="submit" class="btn btn-primary" data-save="modal" value="إضافة" />

                </div>
            </form>

        </div>
    </div>
</div>


